-- this is one guy make
-- her say the script by ChatGPT (AI)

-- CONFIG
local DAMAGE_MULTIPLIER = 12
local REACH = 50
local player = game.Players.LocalPlayer
local RS = game:GetService("ReplicatedStorage")
local UIS = game:GetService("UserInputService")

-- Civilians/NPCs to skip
local CIVILIANS = {"Friendly","Civilian","NPC_Friendly"}

-- GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "INFHITGUIGOD"
ScreenGui.Parent = player:WaitForChild("PlayerGui")

local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0, 450, 0, 150)
Frame.Position = UDim2.new(0.3,0,0.3,0)
Frame.BackgroundColor3 = Color3.fromRGB(166,166,166)
Frame.Active = true
Frame.Draggable = true
Instance.new("UICorner", Frame)

local Title = Instance.new("TextLabel", Frame)
Title.Size = UDim2.new(1,0,0,50)
Title.Position = UDim2.new(0,0,0,0)
Title.BackgroundColor3 = Color3.fromRGB(63,63,63)
Title.TextColor3 = Color3.fromRGB(0,0,0)
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 32
Title.Text = "SUB SCRIPTTROL AND LIKE"

local Button = Instance.new("TextButton", Frame)
Button.Size = UDim2.new(0, 400, 0, 100)
Button.Position = UDim2.new(0.025,0,0.3,0)
Button.Text = "FAST PUNCH"
Button.TextSize = 48
Button.TextColor3 = Color3.new(0,0,0)
Button.BackgroundColor3 = Color3.fromRGB(97,97,97)
Instance.new("UICorner", Button)

-- Check if the target part is valid
local function isValidTarget(targetPart)
	if not targetPart or not player.Character then return false end
	if targetPart:IsDescendantOf(player.Character) then return false -- don't hit self
	end
	local ancestor = targetPart
	while ancestor do
		for _, name in ipairs(CIVILIANS) do
			if ancestor.Name == name then return false end
		end
		ancestor = ancestor.Parent
	end
	local model = targetPart:FindFirstAncestorWhichIsA("Model")
	if not model or not model:FindFirstChildWhichIsA("Humanoid") then return false end
	return true
end

-- Swing function (12x damage)
local function swing(targetPart)
	if not isValidTarget(targetPart) then return end
	local hrp = player.Character:FindFirstChild("HumanoidRootPart")
	if not hrp then return end
	if (targetPart.Position - hrp.Position).Magnitude > REACH then return end

	for i = 1, DAMAGE_MULTIPLIER do
		local swingData = {
			[1] = {
				Normal = Vector3.new(0,1,0),
				Material = targetPart.Material,
				Instance = targetPart,
				Position = targetPart.Position
			},
			[2] = (targetPart.Position - hrp.Position).Unit
		}
		pcall(function()
			RS.Remotes.GunSystem.SwingMelee:FireServer(table.unpack(swingData))
		end)
	end
end

-- Bind Mouse1 to fast punch
Button.MouseButton1Click:Connect(function()
	local mouse = player:GetMouse()
	mouse.Button1Down:Connect(function()
		if mouse.Target then
			swing(mouse.Target)
		end
	end)
	Frame.Visible = false
end)

-- Mobile Tap
UIS.TouchTap:Connect(function(touchPositions, gameProcessed)
	if gameProcessed then return end
	if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
		local root = player.Character.HumanoidRootPart
		local rayParams = RaycastParams.new()
		rayParams.FilterDescendantsInstances = {player.Character}
		rayParams.FilterType = Enum.RaycastFilterType.Blacklist
		local rayResult = workspace:Raycast(root.Position, root.CFrame.LookVector*REACH, rayParams)
		if rayResult then
			swing(rayResult.Instance)
		end
	end
end)
